<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_small">

    <TextView
        android:id="@+id/tv_history_chordpair"
        style="@style/ListItemHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_history_changes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_history_chordpair"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/history_changes_label"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_text_size_byline" />

    <TextView
        android:id="@+id/tv_history_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_history_chordpair"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tv_history_changes_label"
        android:layout_toRightOf="@+id/tv_history_changes_label"
        android:textSize="@dimen/list_text_size_byline"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_history_achieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_history_chordpair"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_text_size_byline" />
</RelativeLayout>